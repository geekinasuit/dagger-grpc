    name = "apt",
    srcs = glob(["src/main/kotlin/**/*.kt"]),
    associates = ["//io_grpc/compiler/common"],
    plugins = [
        "//third_party/processors:auto-service",
    ],
    visibility = ["//visibility:public"],
